" file
set encoding=UTF-8
set autoread
set noswapfile

" line number
set nu
set rnu

" indent
set expandtab
set shiftwidth=4
set smartindent
set autoindent
set tabstop=4

" search options
set hlsearch
set ignorecase
set incsearch
set belloff=all

" view
set cursorline
set foldmethod=indent
set showmode
set title
set showmatch
set novisualbell

" clipboard
set clipboard&
set clipboard^=unnamedplus

set nocompatible
set whichwrap=b,s,h,l,<,>,[,],~
set backspace=indent,eol,start
